{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary mb-4">
                    <i class="fas fa-arrow-left"></i> Ana Sayfaya Dön
                </a>

                <article class="mb-5">
                    <h1 class="fw-bold mb-3">{{ post.title }}</h1>

                    <div class="text-muted mb-4 border-bottom pb-3">
                        {% if post.category %}
                            <a href="{{ path('app_category_show', {slug: post.category.slug}) }}" class="badge bg-secondary text-decoration-none mb-2">
                                {{ post.category.name }}
                            </a>
                        {% endif %}
                        <span><i class="far fa-clock"></i> {{ post.publishedAt|date("d.m.Y") }}</span>
                    </div>

                    {% if post.coverImage %}
                        <img
                            src="{{ asset('uploads/images/' ~ post.coverImage) }}"
                            class="img-fluid rounded shadow-sm mb-4 w-100"
                            alt="{{ post.title }}"
                            style="height: 400px; object-fit: cover;"
                        >
                    {% endif %}

                    <div class="blog-content fs-5 lh-lg">
                        {{ post.content|raw }}
                    </div>
                </article>

                <section class="comments-area bg-light p-4 rounded mt-5">
                    <div class="mt-5">
                        <h3 class="mb-4">Yorumlar ({{ post.comments|length }})</h3>

                        <div class="card bg-light mb-5">
                            <div class="card-body">

                                {% if app.user %}
                                    <h5 class="mb-3">Bir Yorum Bırak</h5>

                                    {{ form_start(commentForm) }}
                                    <div class="mb-3">
                                        {{ form_widget(commentForm.content) }}
                                        <div class="text-danger small">
                                            {{ form_errors(commentForm.content) }}
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-paper-plane me-1"></i> Gönder
                                    </button>
                                    {{ form_end(commentForm) }}

                                {% else %}
                                    <div class="text-center py-3">
                                        <p class="mb-2">Yorum yapabilmek için giriş yapmalısınız.</p>
                                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                                            <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                                        </a>
                                        <span class="mx-2">veya</span>
                                        <a href="{{ path('app_register') }}" class="btn btn-outline-secondary">Kayıt Ol</a>
                                    </div>
                                {% endif %}

                            </div>
                        </div>

                        {% for comment in post.comments %}
                            {% if comment.isPublished %}
                                <div class="d-flex mb-4">
                                    <div class="flex-shrink-0">
                                        <img class="rounded-circle" src="https://ui-avatars.com/api/?name={{ comment.author.email }}&background=random" alt="{{ comment.author.email }}" width="50" height="50">
                                    </div>

                                    <div class="flex-grow-1 ms-3">
                                        <div class="fw-bold">
                                            {{ comment.author.email }}
                                            <span class="text-muted small fw-normal ms-2">
                                • {{ comment.createdAt|date('d.m.Y H:i') }}
                            </span>
                                        </div>
                                        {{ comment.content }}
                                    </div>
                                </div>
                                <hr class="my-4">
                            {% endif %}
                        {% else %}
                            <p class="text-muted fst-italic">Henüz hiç yorum yapılmamış. İlk yorumu sen yap!</p>
                        {% endfor %}

                    </div>
                </section>

            </div>
        </div>
    </div>
{% endblock %}
